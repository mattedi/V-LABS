# ============================================
# CONFIGURAÇÕES DO V-LABS BACKEND_COM
# ============================================

# === APLICAÇÃO ===
APP_NAME="V-LABS Backend Communication"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="development"

# === SERVIDOR ===
HOST="0.0.0.0"
PORT=8000

# === CORS (Frontend URLs) ===
CORS_ORIGINS='["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]'
CORS_METHODS='["GET", "POST", "PUT", "DELETE", "OPTIONS"]'
CORS_HEADERS='["*"]'

# === BACKEND_BD (Serviço de Persistência) ===
BACKEND_BD_URL="http://localhost:8001"
BACKEND_BD_TIMEOUT=30

# === LOGS ===
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# === RATE LIMITING (Implementação futura) ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# INSTRUÇÕES DE USO:
# 1. Copie este arquivo para '.env'
# 2. Ajuste os valores conforme seu ambiente
# 3. Nunca commite o arquivo '.env' real
# ============================================